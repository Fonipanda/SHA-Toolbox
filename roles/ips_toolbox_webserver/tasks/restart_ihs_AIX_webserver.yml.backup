---

- name: stop play when a mandatory variable is missing
  assert:
   that:
     - webserver_item != ""
   msg: "webserver_item variable is missing"

- name: "Listing ihs folder"
  shell: find /applis/*/ihs/ -type d -name sw* | awk -F '/' '{print"/"$2"/"$3"/"$4"/"$5}'  | sort -u
  register: ihslist_result
  changed_when: false
  failed_when: false
  when: webserver_item == "all"

- name: "Listing ihs"
  shell: find /applis/*/ihs/ -type d -name sw* | awk -F '/' '{print$5}' | sort -u
  register: ihslist
  changed_when: false
  failed_when: false
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"

- name: "control duplicate ihs dir_name"
  shell: find /applis/*/ihs/ -type d -name {{ webserver_item }} | awk -F '/' '{print"/"$2"/"$3"/"$4"/"$5}'  | sort -u | wc -l
  register: ihs_dir_name_count
  changed_when: false
  failed_when: false
  when: webserver_item != "all"

- name: "get ihs dir_name"
  shell: ls -d /applis/*/ihs/{{ webserver_item }}
  register: ihs_dir_name
  changed_when: false
  failed_when: false
  when: 
    - webserver_item != "all"
    - " '1' in ihs_dir_name_count.stdout"

- name: "copy restart scripts for specific ihs"
  copy:
    src: "{{item}}"
    dest: "{{ ihs_dir_name.stdout }}"
    mode: '0755'
  changed_when: false
  with_items:
      ['stop','start','restart']
  when:
    - webserver_item != "all"
    - " '1' in ihs_dir_name_count.stdout"
    - ihs_dir_name.stderr == ''

- name: "Copy stop script for all ihs"
  copy:
    src: stop
    dest: "{{ webserver_loop_item }}"
    mode: '0755'
  changed_when: false
  loop: "{{ ihslist_result.stdout_lines | list }}"
  loop_control:
    loop_var: webserver_loop_item
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"

- name: "Copy start script for all ihs"
  copy:
    src: start
    dest: "{{ webserver_loop_item }}"
    mode: '0755'
  changed_when: false
  loop: "{{ ihslist_result.stdout_lines | list }}"
  loop_control:
    loop_var: webserver_loop_item
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"

- name: "Copy restart script for all ihs"
  copy:
    src: restart
    dest: "{{ webserver_loop_item }}"
    mode: '0755'
  changed_when: false
  loop: "{{ ihslist_result.stdout_lines | list }}"
  loop_control:
    loop_var: webserver_loop_item
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"


- name: "run restart script for all ihs"
  script: ihsmanage_cmd.ksh restart all
  register: ihs_restart_all
  changed_when: "'successfully' in ihs_restart_all.stdout"
  failed_when: "'Error' in ihs_restart_all.stdout"
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"

- name: "run restart script for specific ihs"
  script: ihsmanage_cmd.ksh restart {{ webserver_item }}
  register: ihs_restart
  changed_when: "'already' not in ihs_restart.stdout"
  failed_when: "'Error' in ihs_restart.stdout"
  when:
    - webserver_item != "all"
    - " '1' in ihs_dir_name_count.stdout"
    - ihs_dir_name.stderr == ''

- set_fact:
     state_json: "IHS not found"

- set_fact:
     state_value_json: ""

- set_fact:
     state_value_json: "No IHS found"
  when:
    - webserver_item == "all"
    - "'sw' not in ihslist_result.stdout"

- set_fact:
     state_value_json: "{{ state_value_json }}, { \"ihs\": \"{{ line_json.split(' ')[2] }}\" ,\"status\": \"{% if line_json.split(' ')[5] == \"restarted\" %}restarted\"{% else %}not restarted\"{% endif %} }"
  loop: "{{ ihs_restart_all.stdout_lines | select('match', '.*restarted.*') | list }}"
  loop_control:
    loop_var: line_json
  when:
    - webserver_item == "all"
    - "'sw' in ihslist_result.stdout"

- set_fact:
     state_value_json: "restarted"
  when:
    - webserver_item != "all"
    - " '1' in ihs_dir_name_count.stdout"
    - ihs_dir_name.stderr == ''
    - "' restarted' in ihs_restart.stdout"

- name: Format to Json
  set_fact:
    state_json: "{ \"ihs\": \"{{ webserver_item }}\" , \"status\": \"{{ state_value_json }}\" }"
  when:
   - webserver_item != "all"
   - " '1' in ihs_dir_name_count.stdout"
   - ihs_dir_name.stderr == ''

- name: Format to Json
  set_fact:
    state_json: "{ \"ihs\": \"{{ webserver_item }}\" , \"status\": \"{{ state_value_json }}\" }"
  when:
   - webserver_item != "all"
   - " '1' in ihs_dir_name_count.stdout"
   - ihs_dir_name.stderr == ''

- set_fact:
    final_state: "restarted"
  when: "'not restarted' not in state_value_json"

- set_fact:
    final_state: "not restarted"
  when: "'not restarted' in state_value_json"

- set_fact:
    final_state: "not restarted"
  when:
    - webserver_item == "all"
    - "'sw' not in ihslist_result.stdout"

- name: set results output
  include_role:
    name: ips_toolbox_set_results
  vars:
     set_results_item: "{{ webserver_item }}"
     set_results_component: "{{ webserver_component }}"
     set_results_operation: "{{ webserver_operation }}"
     set_results_role_name: "{{ webserver_role_name }}"
     set_results_result_name: "{{ webserver_result_name }}"
     set_results_state: "{{ final_state }}"
     set_results_status: "OK"
     set_results_value: "\

      {% if webserver_item == 'all' %}\

         {% if 'sw' in ihslist_result.stdout %}\

           [ {{ state_value_json[1:] }} ]\

         {% else %}\

           {{ state_value_json }}\

         {% endif %}\

      {% else %}\

         {{ state_json | to_json | from_json }}\

      {% endif %}"

